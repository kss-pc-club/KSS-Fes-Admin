{
  "name": "festival-admin",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "yarn -s run firebase serve",
    "husky:prepare": "yarn -s run husky install",
    "build": "webpack",
    "serve": "firebase emulators:start --only hosting",
    "emulator": "firebase emulators:start",
    "lint:stylelint": "stylelint ./public/css/**/*.scss",
    "lint:eslint": "eslint ./src/**/*.ts",
    "lint": "yarn lint:stylelint && yarn lint:eslint",
    "lintfix:stylelint": "yarn lint:stylelint --fix",
    "lintfix:eslint": "yarn lint:eslint --fix",
    "lintfix": "yarn lintfix:stylelint && yarn lintfix:eslint"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix --allow-empty-input"
    ]
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "chart.js": "^3.8.0",
    "firebase": "^9.8.2",
    "firebase-tools": "^11.0.1",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "@popperjs/core": "^2.11.5",
    "@types/bootstrap": "^5.1.12",
    "@types/jquery": "^3.5.14",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.5",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard-scss": "^4.0.0",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
